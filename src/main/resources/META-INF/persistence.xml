<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
  <persistence-unit name="default">
      <class>org.Entity.User</class>
      <class>org.Entity.City</class>
      <class>org.Entity.Country</class>
      <properties>
        <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/test_task"/>
        <property name="javax.persistence.jdbc.user" value="galich"/>
        <property name="javax.persistence.jdbc.password" value="root"/>

        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/>
      </properties>
  </persistence-unit>
</persistence>
